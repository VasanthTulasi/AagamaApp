<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vasanth.hambutton.HamButtonActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/main_screen"
       >
   <include
      layout="@layout/app_bar"
      android:id="@+id/app_bar">
   </include>

      <include layout="@layout/activity_main_count_down"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_below="@id/app_bar"
          />


   </RelativeLayout>


   <com.nightonke.boommenu.BoomMenuButton
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/boom"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="15dp"
       android:layout_marginEnd="3dp"
       app:bmb_buttonEnum="textOutsideCircle"
       app:bmb_piecePlaceEnum="piecePlace_dot_9_1"
       app:bmb_buttonPlaceEnum="buttonPlace_sc_9_1"
       android:layout_marginRight="3dp"
       android:layout_alignParentRight="true"
       app:bmb_normalColor="@color/colorAccent"
       app:bmb_boomEnum="boomHorizontalThrow_1"
            />

</RelativeLayout>
