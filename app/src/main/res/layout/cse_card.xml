<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@color/colorPrimary"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="15dp"
        app:cardBackgroundColor="#F4F6F6"
        app:contentPadding="10dp"
        app:cardMaxElevation="15dp"
        android:clickable="true"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#F4F6F6"
                app:cardElevation="0dp"

                >

            <ImageView
                android:id="@+id/cardImageInCSE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />


            </android.support.v7.widget.CardView>



             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="6dp"
                 android:layout_marginBottom="6dp">

             <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cardTitleInCSE"
                 android:textSize="24sp"
                android:gravity="center_vertical"
                android:text="hello"
                android:textColor="@android:color/black"
                 />

             </LinearLayout>

<!--button creation-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <Button
                    android:id="@+id/readMoreInCSE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/styling_for_readmore_button_in_departments"
                    android:text="Read More"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    />

                <Button
                    android:id="@+id/registerInCSE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/styling_for_register_button_in_departments"
                    android:text="Register"
                    android:textColor="@color/deeppurple"
                    android:layout_alignParentRight="true" />

                <!--end-->


            </RelativeLayout>

             </LinearLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>