<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card"

    android:orientation="vertical"
    tools:context="com.example.vasanth.hambutton.SplashScreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_above="@+id/iv"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:background="@drawable/agilogo" />


    <android.support.v7.widget.CardView
        android:id="@+id/iv"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:contentDescription="@null"
        app:cardCornerRadius="7dp"
        >
    <ImageView
        android:id="@+id/ivIn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/logo"
        android:contentDescription="@null"/>

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/changingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="@string/changing_text_in_splash"
        android:textColor="#f5f1f1"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:textStyle="bold"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brace Yourselves!!"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv"
        android:layout_marginTop="110dp"
        android:textColor="#eadbdb"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:id="@+id/textView6" />




</RelativeLayout>
