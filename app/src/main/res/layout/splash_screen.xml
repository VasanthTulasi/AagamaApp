<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/other_splash"
    android:orientation="vertical"
    tools:context="com.example.vasanth.hambutton.SplashScreen">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_above="@+id/iv"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/agilogo" />



    <ImageView
        android:id="@+id/iv"
        android:layout_width="190dp"
        android:layout_height="77.5dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/logo"
        android:contentDescription="@null"/>



    <TextView
        android:id="@+id/changingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="@string/changing_text_in_splash"
        android:textColor="#f5f1f1"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brace Yourselves!!"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv"
        android:layout_marginTop="120dp"
        android:textColor="#eadbdb"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv"
        android:id="@+id/cse_dep"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_marginTop="160dp"
        android:textSize="15sp"/>

</RelativeLayout>
